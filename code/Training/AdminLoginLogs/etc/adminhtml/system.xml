<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="adminloginlogs" translate="label" sortOrder="110">
            <label>Admin Login Logs</label>
        </tab>

        <section id="adminloginlogs" translate="label" sortOrder="1"
                 showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Configuration</label>
            <tab>adminloginlogs</tab>
            <resource>Training_AdminLoginLogs::adminloginlogs_configuration</resource>

            <group id="general" translate="label" type="text" sortOrder="1"
                   showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>

                <field id="module_enable" translate="label" type="select" sortOrder="1"
                       showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>

        </section>
    </system>
</config>
