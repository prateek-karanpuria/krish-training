               name="additionalSearchByModelNumber" as="additionalSearchByModelNumber"
               template="Magento_Catalog::additionalSearchByModelNumber.phtml" />
    </referenceContainer>

    <referenceContainer name="category.product.list.additional">
        <block name="customAttributes"
               template="Magento_Catalog::product/view/customCategoryText.phtml" 
               before="-"/>
    </referenceContainer>
</page>
