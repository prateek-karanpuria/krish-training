<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="coupons">
            	<action method="setTemplate" ifconfig="rb_multicoupons/general/enable">
                    <argument name="template" xsi:type="string">RB_MultiCoupons::rb-multicoupons.phtml</argument>
                </action>
            </referenceBlock>
            <referenceBlock name="form">
            	<action method="setTemplate" ifconfig="rb_multicoupons/general/enable">
                    <argument name="template" xsi:type="string">RB_MultiCoupons::rb-multicoupons.phtml</argument>
                </action>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
